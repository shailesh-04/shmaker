{
  "name": "shmaker",
  "version": "1.0.5",
  "description": "A collection of essential utility functions by shailesh-04",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn index.ts",
    "start": "node dist/index.js",
    "start-dev": "npx nodemon index.js",
    "build": "tsc",
    "release": "standard-version",
    "public": "git push --follow-tags origin main && npm publish --access public",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shailesh-04/shmaker.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*.js"
  },
  "keywords": [
    "shmaker",
    "utilities",
    "helpers",
    "tools",
    "shailesh",
    "cli",
    "utils",
    "generator",
    "file",
    "migration",
    "tooling"
  ],
  "author": "Shailesh Makavana <shailesakoli@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shailesh-04/shmaker/issues"
  },
  "homepage": "https://github.com/shailesh-04/shmaker#readme",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/node": "^22.15.21",
    "standard-version": "^9.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
